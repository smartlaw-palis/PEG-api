{
  "name": "peg-api",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src\"",
    "build": "./node_modules/.bin/babel src -s -D -d app",
    "watch": "./node_modules/.bin/babel -w src -s -D -d app",
    "start": "NODE_ENV=production nodemon app/index.js",
    "prestart": "npm run -s build",
    "eslint": "eslint src",
    "coverage": "./node_modules/.bin/babel-cli ./node_modules/.bin/babel-istanbul cover ./node_modules/.bin/_mocha --report lcovonly -- -R specs",
    "test": "NODE_ENV=test nodemon app/index.js",
    "unit-test": "NODE_ENV=test ./node_modules/.bin/mocha specs/unit-tests --compilers js:babel-core/register --recursive --timeout 30000000",
    "integration-test": "NODE_ENV=test ./node_modules/.bin/mocha specs/integration-tests --compilers js:babel-core/register --recursive --timeout 30000"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "method-override": "^2.3.10",
    "moment": "^2.19.2",
    "morgan": "^1.7.0",
    "pg": "^6.1.0",
    "pug": "^2.0.0-rc.4",
    "randomstring": "^1.1.5",
    "serve-favicon": "~2.3.0",
    "web3": "1.0.0-beta.33",
    "ws": "^3.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-istanbul": "^0.12.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.12.0",
    "glob": "^7.1.2",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "sinon": "^4.1.2",
    "supertest": "^3.0.0"
  }
}
